---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
---

<BaseLayout title="博客 - Josephine's Blog">
  <section>
    <div class="mb-16">
      <h1 class="text-4xl md:text-5xl font-semibold mb-4">博客</h1>
      <p class="text-lg text-white/50">分享技术、AI 与编程的思考</p>
    </div>

    {sortedPosts.length === 0 ? (
      <div class="text-center py-20 text-white/30">
        暂无文章
      </div>
    ) : (
      <div class="space-y-1">
        {sortedPosts.map((post, index) => (
          <a href={`/blog/${post.slug}`} class="group block py-8 border-b border-white/5 hover:border-white/10 transition-colors">
            <div class="flex flex-col md:flex-row md:items-start justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <time class="text-xs text-white/30 font-mono">
                    {post.data.pubDate.toLocaleDateString('zh-CN')}
                  </time>
                  {index === 0 && (
                    <span class="text-xs px-2 py-0.5 rounded-full bg-white/10 text-white/60">
                      Latest
                    </span>
                  )}
                </div>
                <h2 class="text-2xl font-medium mb-3 group-hover:text-white/80 transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-white/40 leading-relaxed">
                  {post.data.description}
                </p>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex gap-2 mt-4">
                    {post.data.tags.slice(0, 3).map((tag: string) => (
                      <span class="text-xs text-white/30">#{tag}</span>
                    ))}
                  </div>
                )}
              </div>
              <span class="hidden md:block text-sm text-white/30 group-hover:text-white/50 transition-colors shrink-0">
                阅读 →
              </span>
            </div>
          </a>
        ))}
      </div>
    )}
  </section>
</BaseLayout>
