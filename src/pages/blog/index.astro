---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 获取所有博客文章
const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

const featuredPost = sortedPosts[0];
const otherPosts = sortedPosts.slice(1);
---

<BaseLayout title="博客 - Josephine's Blog">
  <section>
    <h1 class="text-3xl font-semibold mb-2">博客</h1>
    <p class="text-dim text-sm mb-10">分享技术、AI 与编程的思考</p>

    {sortedPosts.length === 0 ? (
      <div class="text-center py-16 border border-dashed border-gray-800 rounded-lg">
        <span class="i-lucide-file-text text-3xl text-dimmer mb-4 block"></span>
        <p class="text-dim">暂无文章</p>
      </div>
    ) : (
      <div class="space-y-8">
        {/* Featured Post - 大卡片 */}
        {featuredPost && (
          <a href={`/blog/${featuredPost.slug}`} class="group block">
            <article class="featured-card relative overflow-hidden rounded-2xl">
              {/* 背景 */}
              <div class="absolute inset-0 bg-[#0c0c0c] border border-gray-800/60 rounded-2xl group-hover:border-purple-500/40 transition-all duration-500"></div>
              
              {/* 渐变网格背景 */}
              <div class="absolute inset-0 opacity-30">
                <div class="absolute inset-0" style="background-image: linear-gradient(rgba(139,92,246,0.03) 1px, transparent 1px), linear-gradient(90deg, rgba(139,92,246,0.03) 1px, transparent 1px); background-size: 32px 32px;"></div>
              </div>
              
              {/* 紫色光晕 */}
              <div class="absolute -top-20 -right-20 w-60 h-60 bg-purple-500/10 rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
              <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-violet-600/10 rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
              
              {/* 内容 */}
              <div class="relative z-10 p-8 md:p-10">
                <div class="flex items-center gap-3 mb-5">
                  <span class="px-2.5 py-1 text-xs font-medium bg-gradient-to-r from-purple-500 to-violet-500 text-white rounded-md">
                    FEATURED
                  </span>
                  <time class="text-xs text-gray-500 font-mono">
                    {featuredPost.data.pubDate.toLocaleDateString('zh-CN')}
                  </time>
                </div>
                
                <h2 class="text-2xl md:text-3xl font-bold mb-4 leading-tight text-white group-hover:text-purple-300 transition-colors duration-300">
                  {featuredPost.data.title}
                </h2>
                
                <p class="text-gray-400 leading-relaxed mb-6 max-w-2xl">
                  {featuredPost.data.description}
                </p>
                
                <div class="flex items-center justify-between">
                  <div class="flex gap-2">
                    {featuredPost.data.tags?.slice(0, 4).map((tag: string) => (
                      <span class="text-xs px-2.5 py-1 rounded-md bg-gray-800/80 text-gray-400 border border-gray-700/50 font-mono">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <span class="flex items-center gap-1.5 text-sm text-purple-400 font-medium opacity-0 group-hover:opacity-100 transition-all duration-300">
                    阅读全文
                    <span class="i-lucide-arrow-right group-hover:translate-x-1 transition-transform"></span>
                  </span>
                </div>
              </div>
            </article>
          </a>
        )}

        {/* Other Posts - 双列网格 */}
        {otherPosts.length > 0 && (
          <div class="grid md:grid-cols-2 gap-5">
            {otherPosts.map((post) => (
              <a href={`/blog/${post.slug}`} class="group block">
                <article class="post-card relative overflow-hidden rounded-xl h-full">
                  {/* 背景 */}
                  <div class="absolute inset-0 bg-[#0a0a0a] border border-gray-800/50 rounded-xl group-hover:border-purple-500/30 transition-all duration-300"></div>
                  
                  {/* 左侧紫条 */}
                  <div class="absolute left-0 top-0 bottom-0 w-0.5 bg-gradient-to-b from-purple-500 to-violet-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  
                  {/* 底部光线 */}
                  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-purple-500/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  
                  {/* 内容 */}
                  <div class="relative z-10 p-5 md:p-6 flex flex-col h-full">
                    <div class="flex items-center gap-2 mb-3">
                      <time class="text-xs text-gray-600 font-mono">
                        {post.data.pubDate.toLocaleDateString('zh-CN')}
                      </time>
                      {post.data.tags?.[0] && (
                        <span class="text-xs px-2 py-0.5 rounded bg-gray-800/80 text-gray-500 font-mono">
                          {post.data.tags[0]}
                        </span>
                      )}
                    </div>
                    
                    <h3 class="text-lg font-semibold mb-2 text-gray-200 group-hover:text-purple-400 transition-colors line-clamp-2">
                      {post.data.title}
                    </h3>
                    
                    <p class="text-sm text-gray-500 leading-relaxed line-clamp-2 flex-1">
                      {post.data.description}
                    </p>
                    
                    <div class="mt-4 flex items-center gap-1 text-xs text-purple-500 font-mono opacity-0 group-hover:opacity-100 transition-opacity">
                      <span>read →</span>
                    </div>
                  </div>
                </article>
              </a>
            ))}
          </div>
        )}
      </div>
    )}
  </section>
</BaseLayout>

<style>
  .featured-card {
    background: linear-gradient(145deg, #0d0d0f 0%, #0a0a0c 100%);
  }
  
  .featured-card:hover {
    box-shadow: 
      0 0 0 1px rgba(139, 92, 246, 0.15),
      0 8px 40px rgba(0, 0, 0, 0.6),
      0 0 60px rgba(139, 92, 246, 0.08);
  }
  
  .post-card {
    background: linear-gradient(135deg, #0a0a0a 0%, #0c0c0e 100%);
  }
  
  .post-card:hover {
    box-shadow: 
      0 4px 20px rgba(0, 0, 0, 0.4),
      0 0 30px rgba(139, 92, 246, 0.05);
  }
</style>
