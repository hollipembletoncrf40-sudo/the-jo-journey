---
import BaseLayout from '../layouts/BaseLayout.astro';

const FORMSPREE_ID = 'xqeaeelp';
---

<BaseLayout title="联系 - Josephine's Blog">
  <section class="max-w-xl mx-auto">
    <div class="mb-16 text-center">
      <h1 class="text-4xl md:text-5xl font-semibold mb-4">联系</h1>
      <p class="text-lg text-white/50">有任何问题或建议？欢迎联系我</p>
    </div>

    <form 
      action={`https://formspree.io/f/${FORMSPREE_ID}`}
      method="POST"
      class="space-y-6"
    >
      <div>
        <label for="name" class="block text-sm text-white/50 mb-2">姓名</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required
          class="w-full bg-white/5 border border-white/10 rounded-xl px-5 py-4 text-white placeholder-white/30 focus:border-white/20 focus:outline-none transition-colors"
          placeholder="您的姓名"
        />
      </div>

      <div>
        <label for="email" class="block text-sm text-white/50 mb-2">邮箱</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required
          class="w-full bg-white/5 border border-white/10 rounded-xl px-5 py-4 text-white placeholder-white/30 focus:border-white/20 focus:outline-none transition-colors"
          placeholder="您的邮箱"
        />
      </div>

      <div>
        <label for="message" class="block text-sm text-white/50 mb-2">留言</label>
        <textarea 
          id="message" 
          name="message" 
          rows="5"
          required
          class="w-full bg-white/5 border border-white/10 rounded-xl px-5 py-4 text-white placeholder-white/30 focus:border-white/20 focus:outline-none transition-colors resize-none"
          placeholder="您想说的话..."
        ></textarea>
      </div>

      <input type="text" name="_gotcha" style="display:none" />

      <button 
        type="submit" 
        class="w-full bg-white text-black font-medium px-6 py-4 rounded-full hover:bg-white/90 transition-colors"
      >
        发送消息
      </button>
    </form>

    <div class="mt-16 pt-12 border-t border-white/5 text-center">
      <p class="text-white/40 text-sm mb-6">或者通过其他方式联系</p>
      <div class="flex items-center justify-center gap-8">
        <a href="mailto:josephine@example.com" class="text-white/50 hover:text-white transition-colors">
          <span class="i-lucide-mail text-xl"></span>
        </a>
        <a href="https://github.com/hollipembletoncrf40-sudo" target="_blank" class="text-white/50 hover:text-white transition-colors">
          <span class="i-lucide-github text-xl"></span>
        </a>
        <a href="https://twitter.com" target="_blank" class="text-white/50 hover:text-white transition-colors">
          <span class="i-lucide-twitter text-xl"></span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
